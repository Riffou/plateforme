<% include partials/head %>
<%- include('partials/header', {path: 'unite', unite: ordreUnite, connected: 'ok'}) %>

    <div class="container">
        <br>
        <br>
        <table class="table table-borderless">
            <thead>
                <tr>
                    <th>Nom du cours</th>
                    <th>Lu</th>
                    <th>Difficult√©</th>
                </tr>
            </thead>
            <tbody>
            <%  for (var i = 0; i < data.length; i++) { %>
            <tr>
                <td><a href="/unites/<%= idUnite %>/<%= data[i].id %>"><%= ordreUnite %>. Sous-partie <%= i+1%></a></td>
                <td><% if (coursReadArray.indexOf(data[i].id) > -1) { %>
                        <img src="/images/green-check-circle.png" alt="" width="20px">
                    <%}
                    else {%>
                        <img src="/images/red-cross-circle.png" alt="" width="20px">
                    <%}%>
