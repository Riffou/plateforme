                <td>
                    <% switch (data[i].difficulte) {
                    case 0:%>
                    Facile
                    <% break;
                    case 1: %>
                    Moyen
                    <% break;
                    case 2: %>
                    Difficile
                    <% break;
                        default: %>
                    Erreur
                    <% } %>
                </td>
            </tr>
            <% } %>
            </tbody>
        </table>
        <br>
    </div>

