<% include partials/head %>
<% include partials/headerAdmin %>

<body>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-10">
            <br>
            <h5 class="border-bottom border-gray pb-2 mb-0">Challenges<a style="margin-left: 15px; padding-bottom: 2px !important;" role="button" class="addButton" href="/admin/challenges/form"><img src="/images/add.png" alt="" width="30px"></a></h5>

            <div id="formChallenges">
                <table class="table table-borderless">
                    <colgroup>
                        <col span="1" style="width: 15%;">
                        <col span="1" style="width: 70%;">
                        <col span="1" style="width: 15%;">
                    </colgroup>
                    <thead>
                    <tr>
                        <th>Ordre</th>
                        <th>Nom</th>
                        <th style="text-align: center;">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for (var i = 0; i < dataChallenges.length; i++) { %>
                    <p style="display:none" id="pChallenges<%= i %>" class="p-challenges"><%= dataChallenges[i].id %></p>
                    <tr>
                        <td><input class="form-control col-sm-6" style="text-align: center;" value="<%= dataChallenges[i].ordre %>"></td>
                        <td><input class="form-control col-sm-12" value="<%= dataChallenges[i].nom %>"></td>
                        <td style="text-align: center;">
                            <a role="button" class="editButton" href="/admin/challenges/form/<%= dataChallenges[i].id %>"><img src="/images/edit.png" alt="" width="30px"></a>
                            <a role="button" class="supprimerButton" data-toggle="modal" name="<%= dataChallenges[i].nom %>" data-target="#confirmModal" href="/admin/challenges/delete/<%= dataChallenges[i].id %>"><img src="/images/bin.png" alt="" width="30px"></a>
                        </td>
                    </tr>
                    <%}%>
                    </tbody>
                </table>
                <div style="text-align: center;">
                    <button class="btn btn-info" id="sauvegarderChallenges">Sauvegarder</button>
                </div>
            </div>
            <div class="row justify-content-center" id="error" style="display: none">
                <div class="col-sm-12">
                    <br>
                    <div class="alert alert-danger" role="alert">
                        <p style="margin-bottom: 0px;" id="pError"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/dashboardChallenges.js"></script>
</body>

<!-- Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titleChallengesModal">Confirmation de suppression</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="messageModal"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-info" id="confirmerModal">Confirmer</button>
            </div>
        </div>
    </div>
</div>

<% include partials/footer%>