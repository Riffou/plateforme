      <%
      if (typeof path != "undefined") {
        if (path == "unite") { %>
        <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
          <a class="navbar-brand" href="/unites">
            <img src="/open-iconic/png/chevron-left-white-3x.png" alt="">
          </a>
            <a class="navbar-brand" href="/unites">
                <% if (unite == "1") { %>
                    Unité 1
                <% }
                else if (unite == '2') { %>
                    Unité 2
                <% } %>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
        </nav>
        <% }
        else if (path == "cours" && typeof unite != "undefined" && typeof partie != "undefined") { %>
          <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
            <a class="navbar-brand" href="/unites/1">
              <img src="/open-iconic/png/chevron-left-white-3x.png" alt="">
            </a>
            <a class="navbar-brand"
              <% if (unite == '1') { %>
               href="/unites/1"> Unité 1 -
                <% if (partie == '1') { %>
                    Partie 1
                <% }
                else if (partie == '2') { %>
                  Partie 2
                <%}%>
              <% }
              else if (unite == '2') { %>
              href="/unites/2"> Unité 2 -
                  <% if (partie == '1') { %>
                Partie 1
                  <% }
                  else if (partie == '2') { %>
                Partie 2
                  <%}
              } %>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          </nav>
        <% }
        } %>


</header>
