<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Accueil</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <% if (typeof connected != "undefined") { %>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/unites">Cours</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/challenges">Challenges</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/faq">F.A.Q</a>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="/profil"><span class="oi oi-person"></span></a>
        </li>
        <li class="nav-item" style="float:right">
          <a class="nav-link" href="/deconnexion"><span class="oi oi-power-standby"></span></a>
        </li>
      </ul>
    </div>
    <% } %>
  </nav>

      <%if (typeof path != "undefined") {
          if (path == "unite") { %>
          <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
            <a class="navbar-brand" href="/unites">
              <img src="/open-iconic/png/chevron-left-white-3x.png" alt="">
            </a>
              <a class="navbar-brand" href="/unites">
                  Unité <%= ordreUnite %>
              </a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
          </nav>
          <% }
          else if (path == "cours"
                  && typeof idUnite != "undefined"
                  && typeof ordreUnite != "undefined"
                  && typeof ordreCours != "undefined") { %>
            <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
              <a class="navbar-brand" href="/unites/<%= idUnite %>">
                <img src="/open-iconic/png/chevron-left-white-3x.png" alt="">
              </a>
              <a class="navbar-brand" href="/unites/<%= idUnite %>">
                Unité <%= ordreUnite %> - Cours <%= ordreCours %>
              </a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
            </nav>
          <% }
          else if (path == "challenge"
                  && typeof ordreChallenge != "undefined") { %>
            <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
              <a class="navbar-brand" href="/challenges">
                <img src="/open-iconic/png/chevron-left-white-3x.png" alt="">
              </a>
              <a class="navbar-brand" href="/challenges">
                  Challenge <%= ordreChallenge %>
              </a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
            </nav>
          <%}
          else if (path == "profil") { %>
            <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
              <a class="navbar-brand" href="/profil">
                Mon profil
              </a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
            </nav>
    <%}
        } %>
</header>