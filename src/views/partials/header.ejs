<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Accueil</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/unites">Cours</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/challenges">Challenges</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/faq">F.A.Q</a>
        </li>
      </ul>
    </div>
  </nav>


      <%
      if (typeof path != "undefined") {
        if (path == "unite") { %>
        <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
          <a class="navbar-brand" href="/unites">
            <img src="/open-iconic/png/chevron-left-white-3x.png" alt="">
          </a>
            <a class="navbar-brand" href="/unites">
                Unité <%= unite %>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
        </nav>
        <% }
        else if (path == "cours" && typeof unite != "undefined" && typeof cours != "undefined") { %>
          <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
            <a class="navbar-brand" href="/unites/1">
              <img src="/open-iconic/png/chevron-left-white-3x.png" alt="">
            </a>
            <a class="navbar-brand" href="/unites/<%= unite %>">
              Unité <%= unite %> - Cours <%= cours %>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          </nav>
        <% }
        else if (path == "challenge") { %>
          <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
            <a class="navbar-brand" href="/challenges">
              <img src="/open-iconic/png/chevron-left-white-3x.png" alt="">
            </a>
            <a class="navbar-brand" href="/unites">
                Challenges
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          </nav>
        <%}
        } %>

</header>
