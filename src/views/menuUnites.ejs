<% include partials/head %>
<%- include('partials/header', {connected: 'ok'}) %>

<body>
  <br><br>
  <div class="container">
    <div class="row">
      <% if (data != null) {
        for (var i = 0; i < data.length; i++) { %>
        <div class="col-sm-4 mb-4">
          <div class="card" style="height:100%;">
            <div class="card-body">
              <h5 class="card-title"><%= data[i].nom %>
                <% if (arrayUnitesSize[data[i].id][0] > 0) {%>
                  <% if (arrayUnitesLus[data[i].id]) { %>
                <img class="checkIconsMenuUnites" src="/images/green-check-circle.png" alt="" width="20px">
                  <%}
                  else {%>
                <img class="checkIconsMenuUnites" src="/images/red-cross-circle.png" alt="" width="20px">
                  <%}%>
                <%}%>
                (<%= arrayUnitesSize[data[i].id][1] %>/<%= arrayUnitesSize[data[i].id][0]%>)
              </h5>
              <p class="card-text"><%= data[i].description %></p>
              <br>
              <a href="unites/<%= data[i].id %>" class="btn btn-custom" style="position:absolute; bottom:10px;">Accéder</a>
            </div>
          </div>
        </div>
        <%}
        }
        else {%>
          <p>Aucune catégorie de cours n'est proposée.</p>
        <%}%>
    </div>
  </div>
</body>

<% include partials/footer %>
