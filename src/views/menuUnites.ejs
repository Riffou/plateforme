<%- include('partials/header', {connected: 'ok'}) %>

<body>
  <br><br>
  <div class="container">
    <div class="row">
      <%  for (var i = 0; i < data.length; i++) { %>
      <div class="col-sm-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= data[i].nom %>
              <% if (arrayUnitesLus[data[i].id]) { %>
            <img class="checkIconsMenuUnites" src="/images/green-check-circle.png" alt="" width="20px">
              <%}
              else {%>
            <img class="checkIconsMenuUnites" src="/images/red-cross-circle.png" alt="" width="20px">
              <%}%>
              (<%= arrayUnitesSize[data[i].id][1] %>/<%= arrayUnitesSize[data[i].id][0]%>)
            </h5>
            <p class="card-text">Description cours : <%= data[i].nom %></p>
            <a href="unites/<%= data[i].id %>" class="btn btn-dark">Acc√©der</a>
          </div>
        </div>
      </div>
      <%}%>
    </div>
  </div>
</body>

